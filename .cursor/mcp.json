{
  "mcpServers": {
    "mcp-server-firecrawl": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "@mendableai/mcp-server-firecrawl",
        "--config",
        "{\"fireCrawlApiKey\":\"fc-38c356eab8bb481e9c54a0ea7b87217d\"}"
      ]
    },
    "chrome-devtools": {
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/chrome-devtools-mcp-wrapper.ps1"
      ],
      "cwd": "${workspaceFolder}"
    }
  }
}
